@model IEnumerable<FinalProject.Models.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Released)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.minutes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RatingID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Released)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.minutes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RatingID)
            </td>
            <td>
                <a asp-action="Watch" asp-route-id="@item.Id">Watch</a> 
                
            </td>
        </tr>
}
    </tbody>
</table>
